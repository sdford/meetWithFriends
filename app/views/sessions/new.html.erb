<div style="width:100%;height:100px;border:1px solid #000; background-color: #7FFF00">
    <h1 align="center">Meet with Friends</h1>

</div>

<span align="center">
<h3>Log In</h3>

<%= form_tag sessions_path do %>

	<div class="control-group">
    <%= label_tag :email %>
    <div class="controls">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>

	<div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>

<p>

  Or

<p>

<h4><%= link_to raw("<i class='icon-plus icon-white'></i>Register Here"), register_path, :class => 'btn btn-primary', :id => 'Register' %></h4>
</span>