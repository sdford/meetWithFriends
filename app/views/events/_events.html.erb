<% if @events.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
  			<th>Location</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.title, event_path(event) %></td>
          <td><%= event.location %></td>
          <td><%= event.start.strftime("%m/%d/%y %l:%M %p") %></td>
          <td><%= event.end.strftime("%m/%d/%y %l:%M %p") %></td>
          <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit"), edit_event_path(event), :class => 'btn btn-md' %></td>
          <td><%= link_to raw("<span class='glyphicon glyphicon-ok'></span> Check In"), {:controller => :events, :action => :check_in}, {:method => :post, :class => 'btn btn-success'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="digg_pagination"> <div clas="page_info"> <%= page_entries_info @events %> </div> <%= will_paginate @events, :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %> </div>
<% end %>
<h4><%= link_to raw("<i class='icon-plus icon-white'></i>Create an Event"), new_event_path, :class => 'btn btn-primary'%></h4>
