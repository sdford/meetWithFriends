<div class="row ">
	<div class="col-sm-10 col-md-10 col-lg-10">
		<h2>Event Details</h2>
		<%= render :partial => "event_details" %>
	</div>
  <br>
  <br>
</div>

<div class="form-actions">
  <%= link_to raw("<span class='glyphicon glyphicon-list'></span> Display All Events"), events_path, :class => 'btn btn-default myDisplayAllButton'  %>&nbsp;&nbsp;
  <%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit #{@event.title}"), edit_event_path(@event), :class => 'btn btn-primary myEditButton' %>&nbsp;&nbsp;
  <%= link_to raw("<span class='glyphicon glyphicon-ok'></span> Cancel #{@event.title}"), activate_event_path(@event), :class => 'btn btn-success' %>

</div>