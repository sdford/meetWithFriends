<div class="row">
  <div class="col-sm-6 col-med-6 col-lg-6">
    <p>
      <b>Title: </b> <%= @event.nil? ? "---" : @event.title %>
    </p>

    <p>
      <b>Start Time: </b><%= @event.nil? ? "---" : @event.start %>
    </p>

    <p>
      <b>End Time: </b><%= @event.nil? ? "---" : @event.end %>
    </p>
    
    <p>
      <b>Description: </b><%= @event.nil? ? "---" : @event.description %>
    </p>
  </div>
</div>

<p>
  <h4>Required Attendees</h4>
</p>

<% if @event.users.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Points</th>
        <th class="no-sort">&nbsp;</th>
        <th class="no-sort">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @attendees.each do |user| %>
        <tr>
          <td><%= link_to (user.first_name + user.last_name), user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.points %></td>
          <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit"), edit_user_path(user), :class => 'btn btn-md' %></td>
          <td> Button to delete invitation </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

