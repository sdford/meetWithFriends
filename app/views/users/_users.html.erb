<% if @users.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  			<th>Email</th>
        <th>Username</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to (user.first_name + user.last_name), user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit"), edit_user_path(user), :class => 'btn btn-md' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="digg_pagination"> <div clas="page_info"> <%= page_entries_info @users %> </div> <%= will_paginate @users, :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %> </div>
<% end %>
